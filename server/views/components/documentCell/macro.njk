{%- from "../doubleCell/macro.njk" import doubleCell -%}

{% macro documentCell(crn, convictionId, documentId, completedDate, linkText, noText ) -%}
{%- set documentDownloadLink='<a class="govuk-link--no-visited-state" href="/' + crn + '/convictions/' + convictionId + '/documents/' + documentId + '">'+ linkText +'</a>'-%}
{%- set noDocumentElement='<strong class="govuk-tag govuk-tag--grey">' + noText +'</strong>' -%}
{%- set uploadedDate = 'Uploaded ' + completedDate | dateFormat-%}

{{ doubleCell(documentDownloadLink if completedDate else noDocumentElement, uploadedDate if completedDate) }}

{%- endmacro %}