<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-form-group">
      <h2 class="govuk-heading-l">
            {{ params.titleText | safe if params.titleText else "Allocation instructions" }}
      </h2>
      <label class="govuk-label govuk-label--l" for="instructions">

        {{ params.html | safe if params.html}}

            <div id="more-detail-hint" class="govuk-hint">
              {{ params.hintText | safe if params.hintText else "Enter any instructions/information you want to pass on. This is saved automatically, and you can review it later when selecting the recipients." }}
            </div>
              <textarea class="govuk-textarea" id="instructions" name="instructions" rows="5" aria-describedby="instuctions-hint"></textarea>
      </label>
    </div>
  </div>
</div>
