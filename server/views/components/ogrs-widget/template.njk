{% macro getRiskLevelText(score) %}
    {% if (score < 50) %}
Low
{% elif score > 49 and score < 75 %}
Medium
{% elif score > 74 and score < 90 %}
High
{% elif score > 74 and score < 90 %}
Very high
{% endif %}
{% endmacro %}

{% macro getOgrsBandingClass(score) %}
    {% if (score < 50) %}
    rosh-widget--low
{% elif score > 49 and score < 75 %}
    rosh-widget--medium
{% elif score > 74 and score < 90 %}
    rosh-widget--high
{% elif score > 89 %}
    rosh-widget--very-high
{% endif %}
{% endmacro %}

{% if params %}
    <div class="rosh-widget {{ getOgrsBandingClass(params.score) }}">
        <h3 class="govuk-heading-m">
            <strong>{{ params.scoreLevel }}</strong> OGRS <span>{{ params.twoYears }}%</span></h3>
        <p class="govuk-body-m">Offender group reconviction scale<br>
            <span class="govuk-body-s govuk-hint">Last updated: {{ completedDate | dateFormat | default("Not known") }}</span></p>
    </div>
{% else %}
    <div class="rosh-widget rosh-widget--none">
        <h3 class="govuk-heading-m">No OGRS</h3>
        <p class="govuk-body-m">Offender group reconviction scale<br>
            <span class="govuk-body-s govuk-hint">An OGRS summary has not been completed for this individual. Check NDelius for this person's current assessment status.</span>
        </p>
    </div>
{% endif %}