{% macro getRiskScoreText(score) %}
{% if (score < 50) %}
LOW
{% elif score > 49 and score < 75 %}
MEDIUM
{% elif score > 74 and score < 90 %}
HIGH
{% elif score > 74 and score < 90 %}
VERY HIGH
{% endif %}
{% endmacro %}

{% macro getRiskScoreClass(score) %}
{% if (score < 50) %}
    risk-badge--low
{% elif score > 49 and score < 75 %}
    risk-badge--medium
{% elif score > 74 and score < 90 %}
    risk-badge--high
{% elif score > 89 %}
    risk-badge--very-high
{% endif %}
{% endmacro %}

{% macro getRiskLevelText(level) %}
{% if level == 'VERY_HIGH' %}
    VERY HIGH
{% elif level == 'HIGH' %}
    HIGH
{% elif level == 'MEDIUM' %}
    MEDIUM
{% elif level == 'LOW' %}
    LOW
{% endif %}
{% endmacro %}

{% macro getRiskLevelClass(level) %}
{% if level == 'VERY_HIGH' %}
    risk-badge--very-high
{% elif level == 'HIGH' %}
    risk-badge--high
{% elif level == 'MEDIUM' %}
    risk-badge--medium
{% elif level == 'LOW' %}
    risk-badge--low
{% endif %}
{% endmacro %}

