{% extends "partials/officer-view.njk" %}
{%- from "../components/doubleCell/macro.njk" import doubleCell -%}
{% from "govuk/components/table/macro.njk" import govukTable %}


{% set pageTitle = applicationName + " - Active cases" %}
{% set officerName = data.forename + ' '  + data.surname %}
{% set officerGrade =  data.grade %}
{% set officerCode =  data.code %}
{% set officerTotalCases = data.activeCases | length %}

{% set tableData = {
    caption: 'Active cases',
    captionClasses: 'govuk-heading-l',
    attributes: {
    'data-module': 'moj-sortable-table'
    },
    head: [
        { text: 'Name / CRN',
            attributes: {
                "aria-sort": "none"
            }
        },
        { text: 'Tier',
            attributes: {
                "aria-sort": "none"
            }
        },
        { text: 'Type of case',
            attributes: {
                "aria-sort": "none"
            }
        }
    ],
    rows: []
} %}

{% for item in data.activeCases %}
    {%- set tableRow = [
        { text: doubleCell('<strong>' + item.forename + ' ' + item.surname + '</strong>', item.crn, 'govuk-body-s' )},
        { text: item.tier },
        { text: (item.caseCategory | capitalize)}
    ] -%}
    {{ tableData.rows.push(tableRow) }}

{% endfor %}


{% block officerContent %}
    {{ govukTable(tableData) }}

{% endblock %}

