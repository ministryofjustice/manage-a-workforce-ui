{% extends "partials/layout.njk" %}
{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "../components/pop/macro.njk" import pop %}
{% from "../components/instructions/macro.njk" import instructions %}

{% block beforeContent %}
    {{ govukBreadcrumbs({
        items: [
            {
                text: "Home"
            },
            {
                text: "Unallocated cases",
                href: '/team/' + teamCode + '/cases/unallocated' 
            }
        ]
    }) }}
{% endblock %}

{% block content %}
    
    {{ pop({name: name, crn: crn, tier: tier, convictionNumber: convictionNumber, teamCode: teamCode}) }}
        
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {{ mojSubNavigation({
                label: 'Sub navigation',
                items: [
                    {
                        text: 'Summary',
                        href: '/team/' + teamCode + '/' + crn + '/convictions/' + convictionNumber + '/case-view',
                        active: 'Summary' in title
                    },
                    {
                        text: 'Probation record',
                        href: '/team/' + teamCode + '/' + crn + '/convictions/' + convictionNumber + '/probation-record',
                        active: 'Probation record' in title
                    },
                    {
                        text: 'Risk',
                        href: '/team/' + teamCode + '/' + crn + '/convictions/' + convictionNumber + '/risk',
                        active: 'Risk' in title
                    },
                    {
                        text: 'Documents',
                        href: '/team/' + teamCode + '/' + crn + '/convictions/' + convictionNumber + '/documents',
                        active: 'Documents' in title
                    }
                ]
            }) }}


            {% block caseContent %}{% endblock %}

        </div>
    </div>

    {{ instructions({convictionId: convictionId, inGridRow: true }) }}

{% endblock %}

